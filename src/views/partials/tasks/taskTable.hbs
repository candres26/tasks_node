<table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
            <tr>
                <td>{{ @index }}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="/done/{{_id}}">
                        {{#if done}}
                            <span class="glyphicon glyphicon-ok">Sin hacer</span>
                        {{else}}
                            <span class="glyphicon glyphicon-remove">Hecha</span>
                        {{/if}}
                    </a>
                    <a href="/edit/{{_id}}">Editar</a>
                    <a href="/delete/{{_id}}">Eliminar</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>