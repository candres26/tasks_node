<div class="container">
    <div class="row">
        <div class="col-md-7 offset-md-2">
            <div class="card car-body p-4 rounded-0 bg-dark text-white">
                <form action="/edit/{{task._id}}" method="post">
                    <h4>Actualizar Tarea</h4>
                    <div class="mb-3">
                        {{!-- <label for="title">Title</label> --}}
                        <input type="text" name="title" placeholder="Titulo" id="title" value="{{task.title}}" class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        {{!-- <label for="description">Description</label> --}}
                        <textarea name="description" placeholder="Descripcion" cols="30" rows="10" class="form-control rounded-0 bg-dark text-white">{{task.description}}</textarea>
                    </div>
                    <button type="submit" name="subimit" class="btn btn-primary btn-sm mt-2">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>